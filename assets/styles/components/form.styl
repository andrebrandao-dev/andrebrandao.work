.form
  margin-top 35px

  &-group
    & + .form-group,
    & + .btn, & + .btn-outline
      margin-top 30px

    &-label
      display block
      cursor pointer
      font-size 1rem
      margin-bottom 0px

    &-control
      padding 1rem .750rem
      border-radius 10px
      border 2px solid #000
      transition all .3s
      text-decoration none
      text-transform uppercase
      font-size .9rem
      width 100%
      margin-top 10px
      font-family 'Fira Sans', sans-serif
      min-width 100%
      transition all .3s
      background-color transparent
      &:focus
        outline none
        box-shadow 0 0 0 3px rgba($primary, .5)
