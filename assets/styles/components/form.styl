.form
  margin-top 35px

  &-group
    position relative
    & + .form-group,
    & + .btn, & + .btn-outline
      margin-top 30px

    // &-label
    //   display block
    //   cursor pointer
    //   font-size 1rem
    //   margin-bottom 0px
    //   border 1px solid red

    &-icon
      display flex
      align-items center
      justify-content center
      position absolute
      height 36px
      width 36px
      top calc(50% - 18px)
      left 0
      font-size 1.2rem
      border-right 2px solid $primary
      cursor pointer
      transition color .3s
      color $primary

    &-helper
      display flex
      align-items center
      justify-content flex-end
      position absolute
      height 36px
      width 36px
      top calc(50% - 18px)
      right 0
      cursor pointer
      font-size 1.4rem

    &-border
      position absolute
      bottom 0
      left 0
      right 0
      width 100%
      height 2px
      background-color $primary

    &-control
      padding 1rem 50px
      border-radius 0
      border none
      transition all .3s
      text-decoration none
      font-size .9rem
      font-weight 500
      width 100%
      font-family 'Fira Sans', sans-serif
      min-width 100%
      transition all .3s
      background-color rgba($ligth, .3)
      max-width 100%
      height 49px
      max-height 100px
      background-color transparent

      &::placeholder
        color rgba($primary, 1)
        opacity 1

      &:disabled
        opacity .6
        cursor not-allowed

      &.textarea
        overflow hidden
        padding-top calc(1rem + 5px)

      &:focus
        outline none
        & + .form-group-icon
          color $primary
