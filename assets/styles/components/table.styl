.table
  width 100%
  padding 0
  width 100%
  max-width 100%
  background-color #FFF
  border-collapse collapse
  border-spacing 0
  border-radius 10px
  overflow hidden
  border 1px solid

  &-responsive
    display block
    width 100%
    overflow-x auto
    -webkit-overflow-scrolling touch
    box-shadow -1px 15px 30px -12px rgba(0, 0, 0, .3)

  td, th
    border 1px solid $ligth
    padding .725rem
    vertical-align middle
    text-align left
    font-size 1rem

    &.has-button
      text-align center

  th
    font-weight 700

    &:first-child
      border-top-left-radius 10px
    &:last-child
      border-top-right-radius 10px

  td
    font-weight 300

  &-body
    tr
      &:hover
        background-color rgba($ligth, .2)
