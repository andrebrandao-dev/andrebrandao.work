.app-footer
  position relative
  width 100%
  height auto
  display flex
  justify-content center
  align-items center
  background-color $primary
  z-index 100
  padding 15px
  &:before
    chalkboard-before(.4)

  &-text
    position relative
    color $ligth
    font-size .8rem
    font-weight 300
    z-index 10
    text-align center
    line-height 1.2rem
    a
      color inherit
