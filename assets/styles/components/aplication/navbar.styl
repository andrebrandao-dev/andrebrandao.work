.app-nav
  width 100%
  height 80px
  display flex
  justify-content space-between
  position relative
  z-index 5

  &-list
    width 100%
    height 100%
    display flex
    align-items center
    justify-content flex-end

  &-item
    display inline-block
    list-style none
    & + .app-nav-item
      margin-left 10px

  &-link
    color rgba($ligth, .7)
    text-decoration none
    text-transform uppercase
    font-size .9rem
    font-weight 300
    position relative
    transition color .3s

    &:before
      position absolute
      width 0
      height 1px
      bottom 0
      left 50%
      background-color $ligth
      transition all .3s

    &:hover, &.active
      color rgba($ligth, 1)

      &:before
        width 100%
        left 0
