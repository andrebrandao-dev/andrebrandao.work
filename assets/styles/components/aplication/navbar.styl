.app-nav
  width 100%
  height 80px
  display flex
  justify-content space-between
  position relative
  z-index 5

  &-list
    max-width 100%
    height 100%
    display flex
    align-items center
    justify-content flex-end

    &.start
      justify-content flex-start

    &.end
      justify-content flex-end

    &.mobile
      display none

      @media(max-width 768px)
        display flex

    &.side
      @media(max-width 768px)
        position fixed
        top 80px
        left 0
        width 280px
        height calc(100vh - 80px)
        background-color $primary
        padding 15px
        display block
        transform translateX(-280px)
        transition transform .3s
        &.is-opened
          transform translateX(0)
        &:before
          chalkboard-before(.4)

        .app-nav-item
          width 100%
          margin 15px 0
          position relative
          z-index 5

  &-item
    display inline-block
    list-style none
    & + .app-nav-item
      margin-left 10px

  &-link
    color rgba($ligth, .5)
    text-decoration none
    text-transform uppercase
    font-size .9rem
    font-weight 300
    position relative
    transition color .3s
    background-color transparent
    border none

    &:focus
      outline none

    &:before
      position absolute
      width 0
      height 1px
      bottom 0
      left 50%
      background-color $ligth
      transition all .3s

    &:hover, &.active
      color rgba($ligth, 1)

      &:before
        width 100%
        left 0
