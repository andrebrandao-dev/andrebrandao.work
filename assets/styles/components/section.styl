.section
  position relative
  width 100%
  height auto
  padding 50px 0
  position relative
  z-index 50
  box-shadow inset 0 0 30px rgba($primary, .2)

  // About Section
  &-about
    background-image url('~static/images/cover.jpg')
    cover()
    text-align center
    position relative

    &:before
      chalkboard-before(.6)

    &-title
      font-size 3rem
      color $ligth
      font-weight 300
      margin 30px 0
      text-transform uppercase
      letter-spacing .3rem
      text-shadow 2px 2px 10px rgba(0, 0, 0, 1)
      strong
        font-weight 400

  &-header
    text-align center

    &-title
      font-size 3rem
      font-weight 300
      position relative
      color $primary
      margin 15px 0

    &-subtitle
      color $primary
      font-weight 300
      display inline-block
      font-size .9rem

    & + .section-body
      margin-top 50px

  &-body
    position relative
    z-index 5
