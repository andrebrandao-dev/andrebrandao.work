@import 'variables/**/*.styl'
@import 'helpers/**/*.styl'
@import 'components/**/*.styl'

*, *:before, *:after
  padding 0
  margin 0
  box-sizing border-box

body
  background-color #FFF
  font-family sans-serif
  font-size 80%
  font-family 'Fira Sans', sans-serif
  max-width 100%
  min-height 100vh
  height auto
  overflow-x hidden
  overflow-y auto

.first-container
  padding-top 60px
  padding-bottom 60px

::selection
  background-color $primary
  color $ligth
