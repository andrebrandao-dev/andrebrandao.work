cover()
  background-size cover
  background-repeat no-repeat
  background-position center

chalkboard-before(opacityLevel)
  position absolute
  content ''
  top 0
  left 0
  bottom 0
  right 0
  width 100%
  height 100%
  background-image url('~static/images/chalkboard.jpg')
  opacity opacityLevel
  z-index 1
