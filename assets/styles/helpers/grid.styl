.container
  max-width 955px
  padding-left 15px
  padding-right 15px
  margin 0 auto
  display block
  position relative
  clear both

.columns
  display flex
  flex-flow row wrap
  align-items flex-start
  justify-content flex-start
  margin-left -15px
  margin-right -15px

.col
  position relative
  padding-left 15px
  padding-right 15px
  height auto
  &.half
    width 50%
  &.full
    width 100%
